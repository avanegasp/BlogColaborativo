<div class="container">
  <div class="row">
    <div class="col-sm-3 col-sm-offset-8"> 
    <%= link_to "Crear un nuevo post", new_post_path, class: "btn btn-primary" %>
    </div>          
    <div class="col-sm-10 col-sm-offset-1">
      <%@post.each do |post|%>
      <div class="container-post">
        <h2> <%= post.title %></h2>
        <p> <%= post.created_at %></p>
        <p> <%= post.user.email%></p>
        <p> <%=post.body %></p>
        <p>  <%= link_to "<span class='glyphicon glyphicon-search'>ir al show</span>".html_safe, post_path(post.id) %></p>
        <p>  <%= link_to "<span class='glyphicon glyphicon-pencil'> Edit post </span>".html_safe , edit_post_path(post.id) %> <%= link_to "<span class='glyphicon glyphicon-trash'> Borrar post </span>".html_safe , post_path(post.id), method: :delete%></p>
      </div>
      <%end%>
    </div>
  </div>
</div>
