<div class="container">
  <div class="index-row row">
    <div class="col-sm-3 col-sm-offset-8">
    <%= link_to "Crear un nuevo post", new_post_path, class: "btn btn-primary" %>
    </div>
    <div class="index-container col-sm-10 col-sm-offset-1">
      <%@post.each do |post|%>
      <%=image_tag @post.header_image.variant(resize: "400x400")%>
        <div class="container-post">
          <div class="col-sm-4">
            <h2> <%= markdown(post.title)%></h2>
            <p class="unique"> <%= post.created_at %></p>
            <p class="unique"> <%= time(post) %></p>
            <p class="unique"> Usuario: <%= post.user.email%></p>
          <div class="text form-group body-post">
            <p><%= markdown(post.body[0..500])%></p>
          </div>
            <p class="p-index">  <%= link_to "<span class='glyphicon glyphicon-pencil'>Leer todo el post</span>".html_safe, post_path(post.id) %></p>

          <%if user_signed_in? && current_user.id == post.user.id %>
             <p class="p-index"> <%= link_to "<span class='glyphicon glyphicon-pencil'> Editar el post </span>".html_safe , edit_post_path(post.id)%>
             <%= link_to "<span class='glyphicon glyphicon-pencil'> Borrar el post </span>".html_safe , post_path(post.id), method: :delete, data: { confirm: "¿Estás seguro de eliminar este Post?"}%></p>
          <%end%>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
