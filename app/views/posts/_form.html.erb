<div class="container">
	<div class="row">	
		<h1><%= form_title %></h1>
		<% if @post.errors.any? %>
			<div class="alert alert-danger">
				<ul>
				<% @post.errors.full_messages.each do |error|%>
					<li> <%= error  %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
		
		<%= form_for @post do |f| %>
			<div class="form_group">
				<%= f.text_field :title, class: "form-control input-lg", placeholder:"titulo del post"%>
			</div>
			<div class="form_group">
				<%= f.text_area :body, class: "form-control input-lg", placeholder:"Escribe tu entrada"%>
			</div>
			<div>
				<%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
			</div> 
		<% end %>
	</div>
</div>