<%- if controller_name != 'sessions' %>
  <%= button_to "Iniciar sesión", new_session_path(resource_name), class:"btn btn-success", style:"font-size:20px;" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Regístrate", new_registration_path(resource_name), class:"btn btn-success", style:"font-size:20px";%><br />
<% end -%>
<br>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name), style:"color:black; font-size:20px;"  %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "No recibiste confirmación de instrucciones?", new_confirmation_path(resource_name), style:"color:black; font-size:20px;"  %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "No recibiste las instrucciones de desbloqueo?", new_unlock_path(resource_name), style:"color:black; font-size:20px;"  %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Regístrate con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), style:"color:black; font-size:20px;"  %><br />
  <% end -%>
<% end -%>
