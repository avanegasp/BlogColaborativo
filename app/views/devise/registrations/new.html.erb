<div class="register container" style="background-image:url(/assets/aviones.jpg);background-size:contain;">
  <div class="row">
    <h1 class="col-md-6 col-md-6" style="color:#097768;font-size:50px;">BLOGUEANDO</h1>
    <div class="col-sm-4 col-md-4 col-sm-offset-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
        <%= devise_error_messages! %>

          <h4 style="color:black">Nombre</h4>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "nombre", class: 'form-control input-lg', placeholder:'Nombre' %>

          <h4 style="color:black">apellido</h4>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "apellido", class:"form-control input-lg", placeholder: 'Apellido' %>

          <h4 style="color:black">Correo electrónico</h4>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-lg',placeholder: 'Correo electrónico' %>

          <h4 style="color:black">Contraseña</h4><%= f.password_field :password, autocomplete: "off" , class:'form-control input-lg',placeholder: 'Contraseña'%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> carácteres mínimo)</em>
          <% end %>

          <h4 style="color:black">Confirma contraseña</h4>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg',placeholder: 'Confirmar contraseña' %>
        <br>
        <br>
        <div class="actions">
         <%= f.button "Regístrate", class: 'btn-sub btn btn-lg btn-success btn-block' %>
        </div>
        <br>
      <% end %>
    </div>

    <div class="col-sm-offset-10">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
